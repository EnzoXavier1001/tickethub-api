generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model category {
  id         BigInt     @id @default(autoincrement())
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  name       String?    @db.VarChar
  services   services[]
}

model customer {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(255)
  cnpj     String     @unique @db.VarChar(14)
  address  String?    @db.VarChar(255)
  services services[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model levels {
  id         BigInt     @id @default(autoincrement())
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  name       String?    @db.VarChar
  color      String?
  services   services[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model services {
  id                BigInt    @id @default(autoincrement())
  created_at        DateTime  @default(now()) @db.Timestamptz(6)
  subject           String?   @db.VarChar
  description       String?   @db.VarChar
  updated_at        DateTime? @default(now()) @db.Timestamptz(6)
  status            Decimal?  @default(0) @db.Decimal
  user_id           BigInt?
  category_id       BigInt?
  priority_level_id BigInt?
  customer_id       Int
  category          category? @relation(fields: [category_id], references: [id], onUpdate: NoAction, map: "fk_category_id")
  customer          customer  @relation(fields: [customer_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_customer")
  levels            levels?   @relation(fields: [priority_level_id], references: [id], onUpdate: NoAction, map: "fk_priority_level_id")
  users             users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_user_id")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model users {
  id         BigInt     @id @default(autoincrement())
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  name       String?    @db.VarChar
  email      String?    @db.VarChar
  password   String?    @db.VarChar
  services   services[]
}
